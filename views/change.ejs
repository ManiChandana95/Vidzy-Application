<%- include ('partials/header') %>
<div class="container">
<h1> Edit movie </h1>

<form action="/videos/<%= video._id %>?_method=PUT" method="POST">

<div class="form-group">
	<input type="text" name="title" value=<%= video.title %> class="form-control" placeholder="title">
</div>
 <div class="form-group">
	<input type="text" name="genre"  value=<%= video.genre %> class="form-control" placeholder="genre">
</div>
<div class="form-group">
	<input type="text" name="image"  value=<%= video.image %> class="form-control" placeholder="image name">
</div>
 <div class="form-group">
	<textarea name="desc" class="form-control" placeholder="description"><%= video.description %></textarea>
</div>
<div class="form-group">
	<button type="submit" class="btn btn-info" >Update</button>
</div>


</form>

<a href="/">Cancel</a>

</div>

<%- include ('partials/footer') %>